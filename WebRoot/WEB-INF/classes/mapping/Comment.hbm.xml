<?xml version="1.0" encoding="utf-8"?> 

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 

"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="pojo">

	<class name="Comment" table="Comment" catalog="shangbiao18">

		<id name="id" type="integer">
			<column name="id" />
			<generator class="native"></generator>
		</id>

		<property name="courseid" type="integer">
			<column name="courseid" />
		</property>
		
		<property name="contentid" type="integer">
			<column name="contentid" />
		</property>
		
		<property name="teamid" type="integer">
			<column name="teamid" />
		</property>
		
		<property name="teacherid" type="integer">
			<column name="teacherid" />
		</property>
		
		
		
		<property name="coursename" type="string">
			<column name="coursename"  length="100"/>
		</property>
		
		<property name="contentname" type="string">
			<column name="contentname" length="100" />
		</property>
		
		<property name="name" type="string">
			<column name="name" length="100" />
		</property>
		
		
		<property name="content" type="text">
			<column name="content" />
		</property>
		<property name="huifu" type="text">
			<column name="huifu" />
		</property>
		
		<property name="time" type="string">
			<column name="time" length="50" />
		</property>

	</class>
</hibernate-mapping>